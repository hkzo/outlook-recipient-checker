<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">
  <!-- https://learn.microsoft.com/ja-jp/office/dev/add-ins/develop/xml-manifest-overview -->

  <Id>e9a0f7d6-cd23-4497-a67f-2fb7052a6a18</Id>
  <Version>1.0.0.3</Version>
  <ProviderName>K.H</ProviderName>
  <DefaultLocale>ja-JP</DefaultLocale>
  <DisplayName DefaultValue="受信者チェック" /> <!-- アドイン名、ボタン名 for OWA and Outlook(New) -->
  <Description DefaultValue="受信メールのTo/Ccに設定したメールアドレスが含まれているか確認します。" /> <!-- for OWA and Outlook(New) -->
  <IconUrl DefaultValue="https://hkzo.github.io/outlook-recipient-checker/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://hkzo.github.io/outlook-recipient-checker/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://hkzo.github.io/outlook-recipient-checker/" />

  <AppDomains>
    <AppDomain>https://hkzo.github.io/outlook-recipient-checker</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://hkzo.github.io/outlook-recipient-checker/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.TooltipTitle"/>
                    <Description resid="TaskpaneButton.Description"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://hkzo.github.io/outlook-recipient-checker/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://hkzo.github.io/outlook-recipient-checker/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://hkzo.github.io/outlook-recipient-checker/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://hkzo.github.io/outlook-recipient-checker/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <!-- Classic 向けの設定 -->
        <bt:String id="GroupLabel" DefaultValue="アドイン"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="受信者チェック"/>
        <bt:String id="TaskpaneButton.TooltipTitle" DefaultValue="受信者チェック"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Description" DefaultValue="設定アドレスが受信メールの宛先に含まれるか確認します。"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
